@model IEnumerable<Product>

<style>
    img {
        width: 100%;
        height: auto;
        vertical-align: middle;
    }

    .pics_in_a_row {
        display: flex;
    }

</style>

<div class="row pb-3">
@foreach(var item in Model)
{
        <div class="col-lg-3 col-md-6 pics_in_a_row">
        <div class="row p-2">
            <div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">

                <div class="card">
                       <img src="@item.ImageUrl" class="card-img-top rounded" style="width:100%">

                       <div class="card-body">
                       <div class="pl-1">
                           <p class="card-title h5 text-primary">@item.Title</p>
                            <p class="card-title h5 text-info">by <b>@item.Author</b></p>
                       </div>
                       <div class="pl-1">
                           <p>List Price: <strike><b>$@item.ListPrice.ToString()</b></strike></p>
                           <p>As low as: <b>$@item.Price100.ToString()</b></p>
                       </div>
                       </div>
                </div>

                <div>
                    <a asp-action="Details" class="btn btn-primary form-control" asp-route-id = "@item.Id">Details</a>
                </div>

            </div>

        </div>
    </div> 
}
</div>
